  <div id="sidebar-wrapper" class="col-md-3">
    <div id="sidebar">
      <ul id="message-list" class="nav list-group">
        {{#each message in model}}
          <li>
            {{#link-to 'message' message class=":read-message-link message.read:read"}}
              <div class="pull-right">{{message.created_at }}</div>
              <div class="from">{{message.sender}}</div>
              <div class="subject">{{message.subject}}</div>
              <div class="body">{{message.body}}</div>
            {{/link-to}}
          </li>
        {{/each}}
      </ul>
    </div>
  </div>
  <div id="main-wrapper" class="col-md-9 pull-right">
    <div id="main">
      <div class="page-header">
        {{outlet}}
      </div>
    </div>
  </div>